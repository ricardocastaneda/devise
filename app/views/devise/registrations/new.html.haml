%h2.page-title= page_title! I18n.t('devise_title.registrations.new')

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field.field-username
    = f.label :username, I18n.t('devise_form.username')
    = f.text_field :username
  .field.field-email
    = f.label :email, I18n.t('devise_form.email')
    = f.email_field :email, autofocus: true
  .field.field-password
    = f.label :password, I18n.t('devise_form.password')
    = f.password_field :password, autocomplete: "off"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length}  #{I18n.t('devise_form.minimum_length')})
  .field.field-password-confirmation
    = f.label :password_confirmation, I18n.t('devise_form.password_confirmation')
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit I18n.t('devise_title.registrations.submit_new')
= render "devise/shared/links"
